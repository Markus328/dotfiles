set $mod Mod4
set $left y
set $down n
set $up e
set $right o
exec foot --server
set $term footclient
set $menu wofi -S drun


output * {
	mode 1440x900@60Hz
		bg ~/.config/util/wallpaper.png fill
		adaptive_sync on
		scale_filter linear
		max_render_time off

}
focus_follows_mouse no
focus_on_window_activation smart



exec ~/.local/share/sway/idle.sh




input "*" {
	xkb_layout "workman,br"
		xkb_variant ",abnt2"
		xkb_options "ctrl:swapcaps, grp:ctrls_toggle"
		repeat_delay 400
		repeat_rate 30

}

input "*" {

	pointer_accel 1

}



  set $mod Control
